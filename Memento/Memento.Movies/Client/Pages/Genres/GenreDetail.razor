@inherits MementoComponent<GenreDetail>

@if (this.Genre == null)
{
	<h3>
		<i class="fas fa-spinner fa-pulse"></i> @this.Localizer.GetString(SharedResources.GENERIC_LOADING)...
	</h3>
}
else
{
	<BreadcrumbHeader Header="@this.BreadcrumbHeader"
					  Actions="@this.BreadcrumbActions"
					  Links="@this.BreadcrumbLinks">
	</BreadcrumbHeader>

	<div class="card mb-md-2">
		<!-- header -->
		<div class="card-header">
			<h3 class="mb-md-0">
				@this.Genre.Name
			</h3>
		</div>
		<!-- body -->
		<div class="card-body">
			<!-- data -->
			<div class="row">
				<div class="col-md-12">
					<dl>
						<dt>@this.Localizer.GetString(SharedResources.GENRE_NAME)</dt>
						<dd>@this.Genre.Name</dd>
					</dl>
				</div>
			</div>
		</div>
	</div>
}

<!-- modal -->
<ConfirmationModal @ref="this.ConfirmationModal"
				   HeaderBackgroundColor="NamedColor.Danger"
				   HeaderTextColor="NamedColor.White"
				   ConfirmButtonColor="NamedColor.Danger"
				   ConfirmButtonCallback="this.OnDeleteConfirmedAsync"
				   CancelButtonColor="NamedColor.Secondary"
				   CancelButtonCallback="this.OnDeleteCancelledAsync">
	<!-- header -->
	<HeaderContent>
		<span class="fas fa-exclamation-triangle"></span> @this.Localizer.GetString(SharedResources.MODAL_DELETE_TITLE, this.Localizer.GetString(SharedResources.GENRE))
	</HeaderContent>
	<!-- body -->
	<BodyContent>
		<p>@this.Localizer.GetString(SharedResources.MODAL_DELETE_BODY, this.Localizer.GetString(SharedResources.GENRE))</p>
	</BodyContent>
</ConfirmationModal>