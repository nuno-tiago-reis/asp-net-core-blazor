@inherits MementoComponent<GenreDetail>

@if (this.Genre == null)
{
	<h3>
		<i class="fas fa-spinner fa-pulse"></i> Loading...
	</h3>
}
else
{
	<div class="card mb-md-2">
		<div class="card-header">
			<h3 class="mb-md-0">
				@this.Genre.Name
			</h3>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-md-12">
					<dl>
						<dt>Title</dt>
						<dd>@this.Genre.Name</dd>
					</dl>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<button class="btn btn-block btn-success mb-1" type="button" @onclick="this.OnUpdate">
						<span class="fas fa-sign-in"></span> Update
					</button>
				</div>
				<div class="col-md-6">
					<button class="btn btn-block btn-danger mt-auto mb-1" type="button" @onclick="this.OnDeleteAsync">
						<span class="fas fa-trash-alt"></span> Delete
					</button>
				</div>
			</div>
		</div>
	</div>
}