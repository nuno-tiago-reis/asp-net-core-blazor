@inherits MementoComponent<GenreCard>

<div class="card mb-md-2">
	<div class="card-header">
		<h3 class="mb-md-0">
			@this.Genre.Name
		</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-12">
				<div class="d-flex flex-column h-100">
					<dl>
						<dt>Title</dt>
						<dd>@this.Genre.Name</dd>
					</dl>
					<button class="btn btn-block btn-primary mt-auto mb-1" type="button" @onclick="this.OnView">
						<span class="fas fa-sign-in"></span> View
					</button>
				</div>
			</div>
		</div>
	</div>
</div>