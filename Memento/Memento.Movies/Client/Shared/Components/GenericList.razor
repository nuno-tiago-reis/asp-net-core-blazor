@typeparam T

@if (this.ElementList == null)
{
	if (this.LoadingTemplate == null)
	{
		<h3>
			<i class="fas fa-spinner fa-pulse"></i> Loading...
		</h3>
	}
	else
	{
		@this.LoadingTemplate
	}
}
else if (this.ElementList.Count == 0)
{
	if (this.EmptyTemplate == null)
	{
		<h3>
			<i class="fas empty-set"></i> There are no records to be shown
		</h3>
	}
	else
	{
		@this.EmptyTemplate
	}
}
else
{
	foreach (var element in this.ElementList)
	{
		@this.ElementTemplate(element)
	}
}