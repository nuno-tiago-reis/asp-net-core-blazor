@inherits MementoComponent<PaginatedList<T>>
@typeparam T

@if (this.Page == null)
{
	if (this.PageLoadingTemplate == null)
	{
		<h3>
			<i class="fas fa-spinner fa-pulse"></i> @this.Localizer.GetString(SharedResources.GENERIC_LOADING)...
		</h3>
	}
	else
	{
		@this.PageLoadingTemplate
	}
}
else if (this.Page.Count == 0)
{
	if (this.PageEmptyTemplate == null)
	{
		<h3>
			<i class="fas empty-set"></i> @this.Localizer.GetString(SharedResources.GENERIC_NO_RECORDS_FOUND)
		</h3>
	}
	else
	{
		@this.PageEmptyTemplate
	}
}
else
{
	foreach (var pageItem in this.Page)
	{
		@this.PageItemTemplate(pageItem)
	}
}