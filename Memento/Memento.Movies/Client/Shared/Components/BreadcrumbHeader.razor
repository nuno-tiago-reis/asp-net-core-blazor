@inherits MementoComponent<BreadcrumbHeader>

<div class="row mb-2 bg-breadcrumb">
	<div class="col-md-6 px-md-3 my-auto text-left">
		<h2 class="py-md-2 px-md-0 m-md-0 ml-md-2">
			@this.Header</h2>
		<nav>
			<ol class="breadcrumb py-md-2 px-md-0 m-md-0 ml-md-2">
				@foreach (var link in this.Links.Take(this.Links.Count - 1))
				{
					<li class="breadcrumb-item">
						<a href="@link.Url">@link.Label</a>
					</li>
				}
				<li class="breadcrumb-item active">
					@this.Links[this.Links.Count - 1].Label
				</li>
			</ol>
		</nav>
	</div>
	<div class="col-md-6 my-auto text-right">
		@foreach (var action in this.Actions)
		{
			<button class="btn m-md-0 mr-md-2 @action.ButtonClasses @(!action.Enabled ? "disabled" : string.Empty)"
					@onclick="action.OnClick">
				<span class="@action.IconClasses"></span>
				@action.Label
			</button>
		}
	</div>
</div>